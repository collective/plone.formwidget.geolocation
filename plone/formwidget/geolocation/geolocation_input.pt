<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">
  <div class="geolocation_wrapper edit">
    <div class="map" tal:attributes="data-geopoints view/json_value"></div>
    <input type="text" class="latitude"
        tal:attributes="id string:${view/id}_latitude;
                        name string:${view/name}:tuple;
                        class string:${view/klass} latitude;
                        style view/style;
                        value python:view.value[0]" />
    <input type="text" class="longitude"
        tal:attributes="id string:${view/id}_longitude;
                        name string:${view/name}:tuple;
                        class string:${view/klass} longitude;
                        style view/style;
                        value python:view.value[1]" />
    <input type="text" class="bounds bounds-south"
        tal:attributes="id string:${view/id}_bounds_south;
                        name string:${view/name}:tuple;
                        class string:${view/klass} bounds bounds-south;
                        style view/style;
                        value python:view.value[2]" />
    <input type="text" class="bounds bounds-west"
        tal:attributes="id string:${view/id}_bounds_west;
                        name string:${view/name}:tuple;
                        class string:${view/klass} bounds bounds-west;
                        style view/style;
                        value python:view.value[3]" />
    <input type="text" class="bounds bounds-north"
        tal:attributes="id string:${view/id}_bounds_north;
                        name string:${view/name}:tuple;
                        class string:${view/klass} bounds bounds-north;
                        style view/style;
                        value python:view.value[4]" />
    <input type="text" class="bounds bounds-east"
        tal:attributes="id string:${view/id}_bounds_east;
                        name string:${view/name}:tuple;
                        class string:${view/klass} bounds bounds-east;
                        style view/style;
                        value python:view.value[5]" />
  </div>
</html>
