<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">
  <div class="geolocation_wrapper" tal:condition="view/value">
    <div class="pat-leaflet map" tal:attributes="data-geopoints view/json_value" data-pat-leaflet='{
      "fullscreencontrol": true,
      "locatecontrol": true,
      "zoomcontrol": true,
      "minimap": true,
      "geosearch": true,
      "geosearch_provider": "google",
      "addmarker": false
    }'></div>
  </div>
</html>
